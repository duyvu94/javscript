<%- include('header') %>
<!-- start: content -->
<%- include('errorbox') %>
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h2>Change Image</h2>
        </div>
        <div class="col-md-push-3 col-md-6 col-xs-12">

            <form method="post" enctype="multipart/form-data" action="/picture/<%= picture.id  %>/uploadimage">
                <div class="form-group file-field input-field">
                    <label for="image">Image</label>
                    <input type="file" name="imgUploader" accept="image/*">
                </div>
                <input type="submit" class="btn btn-primary" name="submit" value="Save Image"/>
                <a href="/pictures" class="btn btn-default">Cancel</a>
            </form>
        </div>
    </div>
</div>

<!-- end: content -->
<%- include('footer') %>